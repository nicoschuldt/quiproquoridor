{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/types": ["./shared/types"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist",
    "shared",
    "src/**/*.test.ts",
    "src/**/test-*.ts",
    "src/**/*-validation.ts"
  ]
} 